@model IEnumerable<Bookly.Models.Customer>


@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<h2>Customers</h2>

<table id="customers" class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>Customer</th>
        <th>Subscription model</th>
        <th>Delete</th>
    </tr>
    </thead>
    <tbody>
           
    </tbody>
</table>

@section scripts
{
    @*
        TODO: CLEAN SCRIPT UP 
        TODO: REMOVE UNUSED UI PACKAGES (alertify, boombox)
        *@
    <script>

        // DELETE CUSTOMER
        // DO NOT TOUCH THIS CANCER FUNCTION PIECE OF SHIT LMAOOOOOOO
        $(document).ready(function () {

            // FILL DATA-TABLES WITH API DATA
            // TODO: ADD THE REST OF THE COLUMNS
            var table = $("#customers").DataTable({
                ajax: {
                    url: "/api/customers",
                    dataSrc: ""
                },
                columns:
                [
                    {
                        data: "name",
                        render: function(data, type, customer) {
                            return "<a href='/customers/edit/" + customer.id + "'>" + customer.name + "</a>";
                        }
                    },
                    {
                        data: "membershipType.name"
                    },
                    {
                        data: "id",
                        render: function(data) {
                            return "<button class='btn-link js-delete' data-customer-id=" + data + ">Delete</button";
                        }
                    }
                ]
            });



            $("#customers").on("click", ".js-delete", function (e) {
                e.preventDefault(); // CANCEL DEFAULT FUNCTION

                // RECUPERATE VALUES
                var button = $(this);
                var message = $(this).data('confirm');

                // SWAL POP UP
                swal({
                        title: "Are you sure that you want to delete this customer",
                        text: message,
                        icon: "warning",
                        buttons: true,
                        dangerMode: true
                    })
                    .then((willDelete) => {
                        if (willDelete) {

                            $.ajax({
                                url: "/api/customers/" + button.attr("data-customer-id"),
                                method: "DELETE",
                                success: function () {
                                    table.row(button.parents("tr")).remove().draw();
                                }
                            });
                            swal("Poof! The customer is gone!", {
                                icon: "success",
                            });
                        } else {
                            swal("Never mind, the customer is safe!");
                        }
                    });
            });
        });
    </script>



}