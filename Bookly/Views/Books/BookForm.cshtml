@model Bookly.ViewModels.BookFormViewModel
@{
    ViewBag.Title = "BookForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>
@using (Html.BeginForm("Save", "Books"))
{
    <div class="form-group">
        @Html.LabelFor(b => b.Book.Name)
        @Html.TextBoxFor(b=>b.Book.Name, new{@class="form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(b => b.Book.Author)
        @Html.TextBoxFor(b=>b.Book.Author,new{@class="form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(b => b.Book.ReleaseDate)
        @Html.TextBoxFor(b=>b.Book.ReleaseDate, "{0:MMM d yyyy}", new{@class="form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(b => b.Book.GenreId)s
        @Html.DropDownListFor(b=>b.Book.GenreId, new SelectList(Model.Genres, "Id", "Name"),"",new{@class="form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(b => b.Book.NumberInStock)
        @Html.TextBoxFor(b=>b.Book.NumberInStock, new{@class="form-control"})
    </div>
    @Html.HiddenFor(b=> b.Book.Id)


    <button type="submit" class="btn btn-primary">Save</button>

}
